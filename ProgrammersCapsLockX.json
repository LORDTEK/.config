{
    "title": "Turkish Programmer's Capslock + key => Useful keys",
    "author": "https://github.com/lordtek",
    "repo": "https://github.com/lordtek/.config/karabiner",
    "maintainers": [
        "LORDTEK"
    ],
    "rules": [ {
        "description": "j=(, k=), m=[, ö=], u={, ı=}, del=backspace, left=VolDn, right=VolUp, down=mute, up=play/pause",
        "manipulators": [ {
            "type": "basic",
            "from": {
                "key_code": "caps_lock",
                "modifiers": {
                    "optional": [
                        "any"
                    ]
                }
            },
            "parameters": {
                "basic.to_if_alone_timeout_milliseconds": 150,
                "basic.to_if_held_down_threshold_milliseconds": 150
            },
            "to_if_alone": [ {
                "key_code": "caps_lock",
                "halt": true
            } ],
            "to_if_held_down": [ {
                "set_variable": {
                    "name": "ProgrammerTR_mode",
                    "value": 1
                },
                "repeat": true
            } ],
            "to_after_key_up": [ {
                "set_variable": {
                    "name": "ProgrammerTR_mode",
                    "value": 0
                },
                "repeat": true
            } ]
        },
        {
            "type": "basic",
            "from": {
                "key_code": "left_arrow",
                "modifiers": {
                    "optional": [
                        "any"
                    ],
                    "mandatory": [
                    ]
                }
            },
            "to": {
                "key_code": "volume_decrement",
                "lazy": true
            },
            "conditions": [ {
                "type": "variable_if",
                "name": "ProgrammerTR_mode",
                "value": 1
            } ]
        },
        {
            "type": "basic",
